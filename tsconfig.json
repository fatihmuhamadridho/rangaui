{
  "include": ["./scripts", "packages/next/src", "./apps/*"],
  "exclude": [
    "node_modules",
    "packages/next/lib/**/*",
    "packages/next/esm/**/*",
    "packages/next/cjs/**/*"
  ],
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {}
  }
}
