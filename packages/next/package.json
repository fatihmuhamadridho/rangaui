{
  "name": "rangkaui-next",
  "version": "0.0.1",
  "main": "./cjs/index.cjs",
  "module": "./esm/index.mjs",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf --glob {esm,cjs,lib,dist} *.tsbuildinfo styles.css styles.layer.css",
    "build:css": "tsx scripts/generateCSS.ts",
    "build:types": "tsc --project tsconfig.json && cp lib/index.d.ts lib/index.d.mts",
    "build:esm": "tsc --project tsconfig.build.json --module ESNext --outDir esm",
    "build:cjs": "tsc --project tsconfig.build.json --module CommonJS --outDir cjs",
    "postbuild": "node scripts/postbuild.js",
    "build": "yarn clean && yarn build:css && yarn build:types && yarn build:esm && yarn build:cjs && yarn postbuild",
    "publish": "npm publish --access public --tag latest"
  },
  "files": [
    "cjs",
    "esm",
    "lib"
  ],
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./esm/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./cjs/index.cjs"
      }
    },
    "./styles/global.css": "./styles/global.css"
  },
  "repository": {
    "url": "https://github.com/fatihmuhamadridho/rangkaui",
    "type": "git",
    "directory": "packages/next"
  },
  "peerDependencies": {
    "react": "^18.x || ^19.x",
    "react-dom": "^18.x || ^19.x"
  },
  "devDependencies": {
    "@types/rimraf": "^4.0.5",
    "replace-in-file": "^8.2.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
